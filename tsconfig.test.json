{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2023", "ESNext.Array", "es2021", "dom", "es2015"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "@modelcontextprotocol/sdk": [
        "./node_modules/@modelcontextprotocol/sdk/dist/esm"
      ]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist", "features", "container"]
}
